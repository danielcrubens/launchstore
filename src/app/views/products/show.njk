{% extends "layout.njk" %}
{% block content %}
    <section class="product-single container">
        <div class="galley">
            <img src="https://via.placeholder.com/500" alt=""/>
        </div>
        <div class="info">
            <h1>{{product.name}}</h1>
            <div class="published">
                Publicado em {{ product.day }} às {{product.hour }}
            </div>
            <div class="description">
                {{product.description}}
            </div>
            <div class="price-buy">
                <div class="price">
                    {{product.price}}
                    {% if product.price !== product.oldPrice %}
                        <span class="old">{{ product.oldPrice }}</span>
                    {% endif %}
                </div>
                <div class="buy">
                    {% if product.status == 0 %}
                        <p class="unavailable">Idisponível</p>
                        {% elseif product.quantity == 0 %}
                        <p class="unavailable">Fora de Estoque</p>
                        {% else%}
                        <button class="button">Comprar</button>
                           {%endif%}
                    </div>
                </div>
            </div>
        </section>
    {% endblock content %}